<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dialog_bg_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:text="提示"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_bottom_normal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="0dip"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_left_color"
                android:gravity="center"
                android:paddingTop="2dip"
                android:text="确定"
                android:textColor="#4783c6"
                android:textSize="17sp" />
            <View
                android:id="@+id/positive_devide"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e9e9f4"
                android:visibility="visible" />
            <Button
                android:id="@+id/btn_neutral"
                android:layout_width="0dip"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_left_color"
                android:gravity="center"
                android:paddingTop="2dip"
                android:text="暂不"
                android:textColor="#4783c6"
                android:textSize="17sp" />
            <View
                android:id="@+id/neutral_devide"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e9e9f4"
                android:visibility="visible" />
            <Button
                android:id="@+id/btn_negative"
                android:layout_width="0dip"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_match_color"
                android:gravity="center"
                android:paddingTop="2dip"
                android:text="取消"
                android:textColor="#4783c6"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>