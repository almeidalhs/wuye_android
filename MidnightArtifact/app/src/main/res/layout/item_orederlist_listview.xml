<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_orderlist_root_ll"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5E5E60"
            android:textSize="@dimen/dimen_sp_14"
            android:text="订单编号："/>

        <TextView
            android:id="@+id/item_orderlist_orderid_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#597BD7"
            android:textSize="@dimen/dimen_sp_14"
            android:text="20161212000000006"/>

        <ImageView
            android:id="@+id/item_orderlist_gold_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:src="@mipmap/jinbi_ic"/>
        
        <TextView
            android:id="@+id/item_orderlist_state_tx"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_sp_14"
            android:text="未支付"
            android:textColor="#FF001A"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/item_orderlist_head_iv"
            android:layout_width="@dimen/dimen_dp_70"
            android:layout_height="@dimen/dimen_dp_70"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/item_orderlist_name_tx"
            android:layout_toRightOf="@+id/item_orderlist_head_iv"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_sp_16"
            android:maxLines="2"
            android:textColor="#616164"
            android:text="name"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/item_orderlist_head_iv"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_orderlist_price_tx"
                android:layout_width="@dimen/dimen_dp_120"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_sp_13"
                android:text="单价：1"/>
            <TextView
                android:id="@+id/item_orderlist_num_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_sp_13"
                android:text="数量：1"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_1"
        android:background="@color/color_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_orderlist_totalprice_tx"
            android:textSize="@dimen/dimen_sp_14"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DC44A0"
            android:text="总金额：¥ 14"/>
        
        <Button
            android:id="@+id/item_orderlist_bt"
            android:layout_width="@dimen/dimen_dp_80"
            android:layout_height="@dimen/dimen_dp_25"
            android:text="联系客服"
            android:textSize="@dimen/dimen_sp_13"
            android:textColor="#50D173"
            android:background="@drawable/bt_orderlist_selector"/>
    </LinearLayout>

</LinearLayout>