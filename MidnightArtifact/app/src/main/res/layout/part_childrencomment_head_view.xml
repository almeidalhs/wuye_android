<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/childrencomment_top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15"
        android:paddingTop="@dimen/dimen_dp_15"
        android:paddingBottom="@dimen/dimen_dp_5">

        <RelativeLayout
            android:id="@+id/childrencomment_head_rl"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <com.base.baselibs.widget.CustomImageView
                xmlns:img="http://schemas.android.com/apk/res-auto"
                android:id="@+id/childrencomment_head_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"
                img:circle="false"
                img:radius="@dimen/dimen_dp_5" />

            <ImageView
                android:id="@+id/childrencomment_gender_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/personal_weman_ic" />

            <ImageView
                android:id="@+id/childrencomment_verify_img"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@mipmap/personal_identification" />
        </RelativeLayout>

        <TextView
            android:id="@+id/childrencomment_name_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_toRightOf="@+id/childrencomment_head_rl"
            android:text="匿名用户"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_sp_14" />

        <TextView
            android:id="@+id/childrencomment_level_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_5"
            android:layout_toRightOf="@+id/childrencomment_name_tx"
            android:background="@drawable/level_blue_bg"
            android:paddingLeft="@dimen/dimen_dp_3"
            android:paddingRight="@dimen/dimen_dp_3"
            android:text="Lv 1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_10" />

        <RelativeLayout
            android:layout_toRightOf="@+id/childrencomment_level_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/childrencomment_vip_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/dimen_dp_5"
                android:paddingRight="@dimen/dimen_dp_5"
                android:background="@drawable/level_red_bg"
                android:text="VIP.0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_10" />

            <ImageView
                android:id="@+id/childrencomment_svip_iv"
                android:layout_width="@dimen/dimen_dp_50"
                android:layout_height="@dimen/dimen_dp_13"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:src="@mipmap/other_svip_ic" />

        </RelativeLayout>

        <TextView
            android:id="@+id/childrencomment_time_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/childrencomment_name_tx"
            android:layout_toRightOf="@+id/childrencomment_head_rl"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:text="今天"
            android:textColor="#A9A9A9"
            android:textSize="@dimen/dimen_sp_12" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/childrencomment_host_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:background="@drawable/host_blue_bg"
            android:paddingLeft="@dimen/dimen_dp_3"
            android:paddingRight="@dimen/dimen_dp_3"
            android:text="楼主"
            android:visibility="gone"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_12" />

        <TextView
            android:id="@+id/blogdetail_comment_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:paddingRight="@dimen/dimen_dp_15"
            android:paddingBottom="10dp"
            android:paddingTop="@dimen/dimen_dp_5"
            android:text="title"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_sp_14" />
    </RelativeLayout>

</LinearLayout>