<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_dp_48"
    android:background="@mipmap/top_wave">

    <LinearLayout
        android:id="@+id/part_newdiscover_topleft_ll"
        android:layout_width="@dimen/dimen_dp_48"
        android:layout_height="@dimen/dimen_dp_48"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/discover_top_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_555354"
            android:textSize="@dimen/dimen_sp_9"
            android:layout_marginTop="@dimen/dimen_dp_1"
            android:text="+场景"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_35"
        android:paddingTop="@dimen/dimen_dp_3"
        android:paddingBottom="@dimen/dimen_dp_3"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/part_newdiscover_topright_ll"
        android:layout_toRightOf="@+id/part_newdiscover_topleft_ll"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <RadioButton
            android:id="@+id/tab_find"
            android:layout_width="@dimen/dimen_dp_55"
            android:layout_height="match_parent"
            android:background="@drawable/discovernew_top_selector"
            android:button="@null"
            android:checked="true"
            android:text="发现"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_18" />

        <RadioButton
            android:id="@+id/tab_charmlist"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_width="@dimen/dimen_dp_55"
            android:layout_height="match_parent"
            android:background="@drawable/discovernew_top_selector"
            android:button="@null"
            android:text="魅力榜"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_18" />

        <RadioButton
            android:id="@+id/tab_fortunelist"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_width="@dimen/dimen_dp_55"
            android:layout_height="match_parent"
            android:background="@drawable/discovernew_top_selector"
            android:button="@null"
            android:text="财富榜"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_18" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/part_newdiscover_topright_ll"
        android:layout_width="@dimen/dimen_dp_48"
        android:layout_height="@dimen/dimen_dp_48"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/discover_top_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_555354"
            android:textSize="@dimen/dimen_sp_9"
            android:layout_marginTop="@dimen/dimen_dp_1"
            android:text="+声音"/>
    </LinearLayout>

</RelativeLayout>