<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/two_category_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/two_category_name_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_dp_2"
        android:paddingTop="@dimen/dimen_dp_2"
        android:singleLine="true"
        android:text="name"
        android:textColor="#070707"
        android:textSize="@dimen/dimen_sp_13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/two_category_price_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:paddingBottom="@dimen/dimen_dp_2"
            android:paddingTop="@dimen/dimen_dp_2"
            android:singleLine="true"
            android:text="¥660.00"
            android:textColor="#700168"
            android:textSize="@dimen/dimen_sp_13" />

        <TextView
            android:id="@+id/two_category_salesvolume_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:paddingBottom="@dimen/dimen_dp_2"
            android:paddingTop="@dimen/dimen_dp_2"
            android:singleLine="true"
            android:text="月销量：66"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_sp_11" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/dimen_dp_2"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/two_category_experience_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dimen_dp_10"
        android:paddingBottom="@dimen/dimen_dp_2"
        android:paddingTop="@dimen/dimen_dp_2"
        android:singleLine="true"
        android:text="赠送经验：  66"
        android:textColor="#666666"
        android:textSize="@dimen/dimen_sp_11" />

    <TextView
        android:id="@+id/two_category_coin_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dimen_dp_10"
        android:paddingBottom="@dimen/dimen_dp_2"
        android:paddingTop="@dimen/dimen_dp_2"
        android:singleLine="true"
        android:text="赠送金币：  6"
        android:textColor="#666666"
        android:textSize="@dimen/dimen_sp_11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_marginRight="@dimen/dimen_dp_5"
            android:paddingBottom="@dimen/dimen_dp_2"
            android:paddingTop="@dimen/dimen_dp_2"
            android:singleLine="true"
            android:text="解锁道具："
            android:textColor="#666666"
            android:textSize="@dimen/dimen_sp_11" />

        <ImageView
            android:id="@+id/two_category_tool_iv"
            android:layout_width="@dimen/dimen_dp_15"
            android:layout_height="@dimen/dimen_dp_15" />

        <TextView
            android:id="@+id/two_category_tool_empty_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_5"
            android:text="无"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_sp_11"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>