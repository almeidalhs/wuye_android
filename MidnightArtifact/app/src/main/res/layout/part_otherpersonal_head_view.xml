<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:gravity="center_vertical"
        android:background="@color/color_44000000"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/otherpersonal_head_rl"
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dimen_dp_50">

            <com.base.baselibs.widget.CustomImageView xmlns:img="http://schemas.android.com/apk/res-auto"
                android:id="@+id/otherpersonal_head_iv"
                android:layout_width="@dimen/dimen_dp_65"
                android:layout_height="@dimen/dimen_dp_65"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher"
                img:circle="false"
                img:radius="@dimen/dimen_dp_5" />

            <ImageView
                android:id="@+id/otherpersonal_gender_iv"
                android:layout_width="@dimen/dimen_dp_15"
                android:layout_height="@dimen/dimen_dp_15"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/personal_man_ic"/>

            <ImageView
                android:id="@+id/otherpersonal_head_verify_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_15"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:scaleType="fitXY"
                android:src="@mipmap/personal_identification"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:paddingLeft="@dimen/dimen_dp_10"
            android:paddingRight="@dimen/dimen_dp_10"
            android:gravity="center_vertical|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/otherpersonal_name_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_sp_16"
                android:textColor="@color/color_white"
                android:text="name"/>

            <TextView
                android:id="@+id/otherpersonal_vip_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otherpersonal_name_tx"
                android:paddingLeft="@dimen/dimen_dp_8"
                android:paddingRight="@dimen/dimen_dp_8"
                android:paddingTop="@dimen/dimen_dp_3"
                android:paddingBottom="@dimen/dimen_dp_3"
                android:background="@drawable/level_green_new_bg"
                android:text="VIP.0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_10" />

            <TextView
                android:id="@+id/otherpersonal_svip_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:layout_toRightOf="@+id/personal_vip_tx"
                android:layout_below="@+id/personal_name_tx"
                android:visibility="gone"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_dp_5"
                android:paddingRight="@dimen/dimen_dp_5"
                android:paddingTop="@dimen/dimen_dp_3"
                android:paddingBottom="@dimen/dimen_dp_3"
                android:background="@drawable/level_red_new_bg"
                android:text=" SVIP"
                android:drawableLeft="@mipmap/crown_white"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_10" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherpersonal_back_ll"
        android:layout_width="@dimen/dimen_dp_48"
        android:layout_height="@dimen/dimen_dp_48"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/otherpersonal_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/back_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherpersonal_more_ll"
        android:layout_width="@dimen/dimen_dp_48"
        android:layout_height="@dimen/dimen_dp_48"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/otherpersonal_right_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/other_more_ic" />
    </LinearLayout>

</RelativeLayout>