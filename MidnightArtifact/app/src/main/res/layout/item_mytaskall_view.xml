<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_dp_10"
    android:paddingRight="@dimen/dimen_dp_10">

    <ImageView
        android:id="@+id/item_task_img"
        android:layout_width="@dimen/dimen_dp_40"
        android:layout_height="@dimen/dimen_dp_40"
        android:layout_marginBottom="@dimen/dimen_dp_10"
        android:layout_marginTop="@dimen/dimen_dp_10"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_dp_10"
        android:layout_marginRight="@dimen/dimen_dp_10"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_task_title_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="#242424"
            android:textSize="@dimen/dimen_sp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_task_experience_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="标题"
                android:textColor="#595959"
                android:textSize="@dimen/dimen_sp_12" />

            <TextView
                android:id="@+id/item_task_coin_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="标题"
                android:textColor="#595959"
                android:textSize="@dimen/dimen_sp_12" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/dimen_dp_60"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/item_task_status_bt"
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_30"
            android:layout_centerInParent="true"
            android:background="@drawable/bt_itemtask_selector"
            android:text="立即分享"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_9"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_task_status_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="未完成"
            android:textColor="#595959"
            android:visibility="visible"
            android:textSize="@dimen/dimen_sp_13" />
    </RelativeLayout>
</LinearLayout>