<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_margin="@dimen/dimen_dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_100"
        android:orientation="horizontal"
        android:background="@color/color_white">

        <RelativeLayout
            android:layout_weight="2"
            android:id="@+id/item_postcontent_head_rl"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dimen_dp_5"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_postcontent_head_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_dp_5"
                android:paddingBottom="@dimen/dimen_dp_5"
                android:text="点击更换图片"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:background="#66000000"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/item_postcontent_content_et"
            android:layout_weight="1"
            android:gravity="top"
            android:padding="@dimen/dimen_dp_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="254"
            android:textSize="@dimen/dimen_sp_14"
            android:background="@null"
            android:hint="输入内容..."/>

    </LinearLayout>

    <ImageView
        android:id="@+id/item_postcontent_delete_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_dp_5"
        android:layout_marginTop="@dimen/dimen_dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/post_create_delete"/>

</RelativeLayout>