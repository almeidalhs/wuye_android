<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_bar_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_dp_48"
    android:background="@mipmap/top_wave">

    <RelativeLayout
        android:id="@+id/bar_title_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:gravity="center">

        <ImageView
            android:id="@+id/bar_title_iv"
            android:layout_width="@dimen/dimen_dp_80"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:layout_marginBottom="@dimen/dimen_dp_5"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@mipmap/main_bar_back" />

        <TextView
            android:id="@+id/bar_title_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_dp_60"
            android:layout_marginRight="@dimen/dimen_dp_60"
            android:singleLine="true"
            android:textColor="@color/color_2B2B2B"
            android:text="标题"
            android:textSize="@dimen/dimen_sp_18" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bar_back_ll"
        android:layout_width="@dimen/dimen_dp_40"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/bar_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/main_bar_back" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bar_right_rl"
        android:layout_width="@dimen/dimen_dp_60"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true">

        <TextView
            android:id="@+id/bar_right_tx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/dimen_sp_13"
            android:visibility="gone"
            android:textColor="@color/color_2B2B2B"/>

        <ImageView
            android:id="@+id/bar_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>
