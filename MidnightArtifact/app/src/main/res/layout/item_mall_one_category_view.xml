<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_mall_category_one_root_ll"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_mall_category_one_iv"
        android:layout_width="@dimen/dimen_dp_3"
        android:layout_height="match_parent"
        android:background="@color/color_f5dc91"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_45">

        <ImageView
            android:id="@+id/item_mall_category_one_bg_iv"
            android:layout_marginTop="@dimen/dimen_dp_1"
            android:layout_marginBottom="@dimen/dimen_dp_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_mall_category_one_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="name"
                android:textColor="@color/color_787878"
                android:singleLine="true"
                android:textSize="@dimen/dimen_sp_14" />

            <TextView
                android:id="@+id/item_mall_category_one_tip_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tip"
                android:visibility="gone"
                android:textColor="@color/color_787878"
                android:singleLine="true"
                android:textSize="@dimen/dimen_sp_12" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>