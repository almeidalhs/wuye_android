<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_dp_10"
    android:background="@color/color_white"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="@dimen/dimen_dp_45"
        android:layout_height="@dimen/dimen_dp_45"
        android:layout_centerInParent="true">

        <com.base.baselibs.widget.CustomImageView xmlns:img="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_ranking_head_iv"
            android:layout_width="@dimen/dimen_dp_45"
            android:layout_height="@dimen/dimen_dp_45"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            img:circle="false"
            img:radius="@dimen/dimen_dp_5" />

        <ImageView
            android:id="@+id/item_ranking_gender_iv"
            android:layout_width="@dimen/dimen_dp_15"
            android:layout_height="@dimen/dimen_dp_15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/personal_man_ic" />

        <ImageView xmlns:img="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_ranking_verify_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@mipmap/personal_identification"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_ranking_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_dp_10"
        android:layout_marginRight="@dimen/dimen_dp_10"
        android:singleLine="true"
        android:text="name"
        android:textColor="@color/color_2B2B2B"
        android:textSize="@dimen/dimen_sp_12" />

    <TextView
        android:id="@+id/item_ranking_level_tx"
        android:layout_marginLeft="@dimen/dimen_dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_dp_3"
        android:paddingRight="@dimen/dimen_dp_3"
        android:text="Lv.2"
        android:background="@drawable/level_blue_bg"
        android:textSize="@dimen/dimen_sp_10"
        android:textColor="@color/color_white"/>

    <RelativeLayout
        android:paddingLeft="@dimen/dimen_dp_3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_ranking_vip_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_dp_5"
            android:paddingRight="@dimen/dimen_dp_5"
            android:background="@drawable/level_red_bg"
            android:text="VIP.0"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_10" />

        <ImageView
            android:id="@+id/item_ranking_svip_iv"
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_13"
            android:visibility="visible"
            android:src="@mipmap/other_svip_ic" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_ranking_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_dp_10"
        android:layout_marginRight="@dimen/dimen_dp_10"
        android:background="@mipmap/rank_cup_new"
        android:singleLine="true"
        android:gravity="center"
        android:text="999"
        android:textColor="@color/color_2B2B2B"
        android:textSize="@dimen/dimen_sp_12" />

</LinearLayout>