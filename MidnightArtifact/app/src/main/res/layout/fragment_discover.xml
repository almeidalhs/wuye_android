<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_marginTop="@dimen/dimen_dp_f5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/discover_top"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_dp_2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_dp_10"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:background="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/color_white"
                    android:paddingBottom="@dimen/dimen_dp_5"
                    android:paddingLeft="@dimen/dimen_dp_10"
                    android:paddingRight="@dimen/dimen_dp_10"
                    android:paddingTop="@dimen/dimen_dp_5"
                    android:text="推荐魔友"
                    android:textColor="@color/color_black" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/discover_top"
        layout="@layout/part_fragment_top_bar" />
</RelativeLayout>