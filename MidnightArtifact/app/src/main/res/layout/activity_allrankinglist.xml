<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_below="@+id/top_bar_ll"
        android:layout_marginTop="@dimen/dimen_dp_f5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/ranking_top_tab_rg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_dp_40"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white"
            android:dividerPadding="@dimen/dimen_dp_6"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle">

            <RadioButton
                android:id="@+id/ranking_tab_week_rt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="周排行"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="@dimen/dimen_sp_16" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_dp_5"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:background="@color/color_line" />

            <RadioButton
                android:id="@+id/ranking_tab_month_rt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="月排行"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="@dimen/dimen_sp_16" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_dp_5"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:background="@color/color_line" />

            <RadioButton
                android:id="@+id/ranking_tab_total_rt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="总排行"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="@dimen/dimen_sp_16" />

        </RadioGroup>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />

        <com.base.baselibs.widget.NoSwipeViewPager
            android:id="@+id/ranking_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/part_ranking_bar"/>
    </LinearLayout>

</RelativeLayout>