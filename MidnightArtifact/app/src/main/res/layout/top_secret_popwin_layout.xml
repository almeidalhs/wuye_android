<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_win_secret_root_rl"
    android:orientation="vertical"
    android:background="#6000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/white_hollow_radius_bg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_dp_70"
        android:layout_width="@dimen/dimen_dp_60"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:paddingTop="@dimen/dimen_dp_5"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/top_win_secret_one_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:paddingTop="@dimen/dimen_dp_5"
            android:gravity="center"
            android:textColor="#0A0A0A"
            android:text="已通过"/>

        <TextView
            android:id="@+id/top_win_secret_two_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:paddingTop="@dimen/dimen_dp_5"
            android:gravity="center"
            android:textColor="#0A0A0A"
            android:text="审核中"/>

        <TextView
            android:id="@+id/top_win_secret_three_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:paddingTop="@dimen/dimen_dp_5"
            android:gravity="center"
            android:textColor="#0A0A0A"
            android:text="未通过"/>

        <TextView
            android:id="@+id/top_win_secret_four_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:paddingTop="@dimen/dimen_dp_5"
            android:gravity="center"
            android:textColor="#0A0A0A"
            android:text="已删除"/>
    </LinearLayout>
</RelativeLayout>