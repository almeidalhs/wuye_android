<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_dp_10"
    android:paddingRight="@dimen/dimen_dp_10">

    <TextView
        android:id="@+id/item_report_tx"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="标题"
        android:textColor="#595959"
        android:textSize="@dimen/dimen_sp_18" />


    <ImageView
        android:layout_height="@dimen/dimen_dp_15"
        android:layout_width="wrap_content"
        android:src="@mipmap/right_arrow" />

</LinearLayout>