<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/discover_find_rl"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dimen_dp_10"
    android:layout_height="25dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@mipmap/discover_find_image" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_2"
            android:paddingBottom="@dimen/dimen_dp_1"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/color_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_dp_3"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="喜欢的人"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多..."
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_12" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>