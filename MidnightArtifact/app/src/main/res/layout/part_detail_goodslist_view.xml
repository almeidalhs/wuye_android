<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/part_detail_goodslist_iv"
        android:layout_width="@dimen/dimen_dp_100"
        android:layout_height="@dimen/dimen_dp_80"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_80"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/part_detail_goodslist_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_dp_5"
            android:text="商品"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_15" />

        <TextView
            android:id="@+id/part_detail_goodslist_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="95.00"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_red"
            android:textSize="@dimen/dimen_sp_14" />

    </RelativeLayout>
</LinearLayout>