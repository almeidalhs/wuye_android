<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_80"
        android:background="#cd8852"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_totalcoin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总金币"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_14" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_dp_10"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:background="@color/color_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_canoutcoin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可兑换金币"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_14" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_1"
        android:src="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_dp_20">

        <TextView
            android:id="@+id/recharge_mygoldshop_one_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_40"
            android:background="@drawable/mygoldshop_one_selector"
            android:drawableLeft="@mipmap/mygoldshop_icon_1"
            android:padding="7dp"
            android:text="  赚金攻略"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_15" />

        <TextView
            android:id="@+id/recharge_mygoldshop_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_40"
            android:background="@drawable/mygoldshop_two_selector"
            android:drawableLeft="@mipmap/mygoldshop_icon_2"
            android:padding="7dp"
            android:text="  金币商城"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_15" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_3"
            android:layout_centerVertical="true"
            android:background="@color/color_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_30"
            android:background="@color/color_white"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:paddingLeft="@dimen/dimen_dp_10"
            android:paddingRight="@dimen/dimen_dp_10"
            android:paddingTop="@dimen/dimen_dp_5"
            android:text="充值钜惠，最高30％"
            android:textColor="@color/color_black"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:id="@+id/recharge_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white" />

</LinearLayout>