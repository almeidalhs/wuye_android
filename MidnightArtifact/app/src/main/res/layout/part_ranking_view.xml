<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/ranking_top_tab_rg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:dividerPadding="@dimen/dimen_dp_6"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <RadioButton
            android:id="@+id/ranking_tab_week_rt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="周排行"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="@dimen/dimen_sp_16" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_dp_5"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:background="@color/color_line" />

        <RadioButton
            android:id="@+id/ranking_tab_month_rt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="月排行"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="@dimen/dimen_sp_16" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_dp_5"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:background="@color/color_line" />

        <RadioButton
            android:id="@+id/ranking_tab_total_rt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="总排行"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="@dimen/dimen_sp_16" />

    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/fragment_ranking_empty_tx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/dimen_sp_18"
            android:textColor="@color/color_black"
            android:text="暂无排行榜数据"/>

        <RelativeLayout
            android:id="@+id/fragment_ranking_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ListView
                android:id="@+id/pullToRefreshListView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:divider="@color/color_line"
                android:dividerHeight="1px"
                android:scrollbars="none" />

            <ImageView
                android:id="@+id/postings_totop_iv"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:layout_width="@dimen/dimen_dp_40"
                android:layout_height="@dimen/dimen_dp_40"
                android:layout_marginBottom="@dimen/dimen_dp_30"
                android:layout_marginRight="@dimen/dimen_dp_10"
                android:src="@mipmap/icon_list_backtotop"/>
        </RelativeLayout>
    </RelativeLayout>

</merge>