<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/myliveroom_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/myliveroom_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/live_live_icon_close" />

    <LinearLayout
        android:id="@+id/myliveroom_ll"
        android:layout_marginTop="@dimen/dimen_dp_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_88000000"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_dp_10">

            <RelativeLayout
                android:id="@+id/myliveroom_rl"
                android:layout_width="@dimen/dimen_dp_45"
                android:layout_height="@dimen/dimen_dp_45"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/myliveroom_head_iv"
                    android:layout_width="@dimen/dimen_dp_45"
                    android:layout_height="@dimen/dimen_dp_45"
                    fresco:roundedCornerRadius="@dimen/dimen_dp_5"
                    fresco:roundingBorderWidth="@dimen/dimen_dp_2"
                    fresco:roundingBorderColor="@android:color/white"
                    fresco:failureImage="@mipmap/ic_launcher"
                    fresco:failureImageScaleType="centerInside"
                    fresco:placeholderImage="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/myliveroom_gender_iv"
                    android:layout_width="@dimen/dimen_dp_15"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:layout_marginRight="@dimen/dimen_dp_2"
                    android:layout_marginBottom="@dimen/dimen_dp_2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/personal_man_ic" />

                <ImageView
                    android:id="@+id/myliveroom_verify_iv"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/dimen_dp_2"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/personal_identification"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:layout_toRightOf="@+id/myliveroom_rl"
                android:id="@+id/myliveroom_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:layout_marginRight="@dimen/dimen_dp_10"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_14" />

            <TextView
                android:layout_toRightOf="@+id/myliveroom_rl"
                android:id="@+id/myliveroom_title_tv"
                android:layout_below="@+id/myliveroom_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:layout_marginRight="@dimen/dimen_dp_10"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_14" />

            <TextView
                android:id="@+id/myliveroom_level_tx"
                android:layout_toRightOf="@+id/myliveroom_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:background="@drawable/level_blue_bg"
                android:paddingLeft="@dimen/dimen_dp_3"
                android:paddingRight="@dimen/dimen_dp_3"
                android:text="Lv.0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_12" />

            <RelativeLayout
                android:layout_toRightOf="@+id/myliveroom_level_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimen_dp_3">

                <TextView
                    android:id="@+id/myliveroom_vip_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/level_red_bg"
                    android:paddingLeft="@dimen/dimen_dp_5"
                    android:paddingRight="@dimen/dimen_dp_5"
                    android:text="VIP.0"
                    android:visibility="gone"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_sp_10" />

                <ImageView
                    android:id="@+id/myliveroom_svip_iv"
                    android:layout_width="@dimen/dimen_dp_50"
                    android:layout_height="@dimen/dimen_dp_13"
                    android:src="@mipmap/other_svip_ic"
                    android:visibility="gone" />

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:background="@color/color_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_dp_10"
            android:paddingRight="@dimen/dimen_dp_10"
            android:paddingTop="@dimen/dimen_dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前直播间人数："
                android:textSize="@dimen/dimen_sp_11"
                android:layout_marginBottom="@dimen/dimen_dp_5"
                android:textColor="@color/color_bfbfbf" />

            <TextView
                android:id="@+id/myliveroom_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/dimen_sp_11"
                android:layout_marginBottom="@dimen/dimen_dp_5"
                android:textColor="@color/color_bfbfbf" />

            <ImageView
                android:id="@+id/myliveroom_anim_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/liveroom_anim" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/myliveroom_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_aaffffff"
        android:orientation="vertical">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chatroom_lv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:descendantFocusability="blocksDescendants"
            android:divider="@color/color_line"
            android:dividerHeight="0px"
            android:listSelector="#00000000"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrMode="both"
            ptr:ptrScrollingWhileRefreshingEnabled="true">
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

    </LinearLayout>

    <ImageView
        android:id="@+id/myliveroom_pic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_dp_20"
        android:layout_marginBottom="@dimen/dimen_dp_10"
        android:src="@mipmap/live_action_icon_image" />

</RelativeLayout>