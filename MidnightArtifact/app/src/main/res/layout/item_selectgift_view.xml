<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_dp_5"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_selectgift_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/item_selectgift_cion_tv"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="兑换:10000金币"
            android:textSize="@dimen/dimen_sp_10"
            android:textColor="#f67d53"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="4"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_selectgift_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_sp_13"
            android:text="名字"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/item_selectgift_meili_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_30"
            android:textSize="@dimen/dimen_sp_10"
            android:text="魅力值:+10000"
            android:textColor="#ae1476"/>

    </LinearLayout>


</LinearLayout>