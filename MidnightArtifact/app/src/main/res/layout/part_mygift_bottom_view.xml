<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:paddingTop="@dimen/dimen_dp_5">

        <RelativeLayout
            android:id="@+id/item_mygift_one_rl"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_mygift_one_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/item_mygift_name_one_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_mygift_one_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:text="name"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_sp_15" />

            <TextView
                android:id="@+id/item_mygift_num_one_tx"
                android:layout_width="@dimen/dimen_dp_40"
                android:layout_height="wrap_content"
                android:layout_above="@+id/item_mygift_name_one_tx"
                android:layout_alignParentRight="true"
                android:background="@drawable/gift_gray_bg"
                android:gravity="center"
                android:text="X2"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_12" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_mygift_two_rl"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_mygift_two_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/item_mygift_name_two_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_mygift_two_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:text="name"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_sp_15" />

            <TextView
                android:id="@+id/item_mygift_num_two_tx"
                android:layout_width="@dimen/dimen_dp_40"
                android:layout_height="wrap_content"
                android:layout_above="@+id/item_mygift_name_two_tx"
                android:layout_alignParentRight="true"
                android:background="@drawable/gift_gray_bg"
                android:gravity="center"
                android:text="X2"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_12" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_mygift_three_rl"
        android:clickable="true"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:paddingTop="@dimen/dimen_dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_mygift_three_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_mygift_name_three_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_mygift_three_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:text="name"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimen_sp_15" />

        <TextView
            android:id="@+id/item_mygift_num_three_tx"
            android:layout_width="@dimen/dimen_dp_40"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_mygift_name_three_tx"
            android:layout_alignParentRight="true"
            android:background="@drawable/gift_gray_bg"
            android:gravity="center"
            android:text="X2"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_12" />

    </RelativeLayout>

</LinearLayout>