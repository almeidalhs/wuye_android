<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.base.baselibs.widget.ShapeImageView
        xmlns:img="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_editscenepic_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/item_editscenepic_select_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_dp_5"
        android:layout_marginRight="@dimen/dimen_dp_5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/select_choose_icon"/>

</RelativeLayout>