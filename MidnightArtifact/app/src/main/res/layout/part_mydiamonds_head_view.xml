<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_80"
        android:background="#17c7eb"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mydiamonds_tocion_tv"
            android:layout_width="@dimen/dimen_dp_90"
            android:layout_height="wrap_content"
            android:background="@drawable/white_radius_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="钻石兑换金币"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_13" />

        <LinearLayout
            android:layout_width="@dimen/dimen_dp_120"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mydiamonds_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/diamonds_red"
                android:text="钻石 "
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/rmydiamonds_withdrawals_tv"
            android:layout_width="@dimen/dimen_dp_90"
            android:layout_height="wrap_content"
            android:background="@drawable/white_radius_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="钻石提现"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:paddingLeft="@dimen/dimen_dp_20"
        android:paddingRight="@dimen/dimen_dp_20"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/mydiamonds_exchange_record_rl"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true">

            <TextView
                android:id="@+id/mydiamonds_exchange_record_tv"
                android:layout_width="@dimen/dimen_dp_80"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="兑换记录"
                android:textColor="@color/color_17c7eb"
                android:textSize="@dimen/dimen_sp_15" />

            <View
                android:id="@+id/mydiamonds_exchange_record_line"
                android:layout_width="@dimen/dimen_dp_80"
                android:layout_height="@dimen/dimen_dp_2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/color_17c7eb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mydiamonds_presentation_record_rl"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true">

            <TextView
                android:id="@+id/mydiamonds_presentation_record_tv"
                android:layout_width="@dimen/dimen_dp_80"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="提现记录"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_sp_15" />

            <View
                android:id="@+id/mydiamonds_presentation_record_line"
                android:layout_width="@dimen/dimen_dp_80"
                android:layout_height="@dimen/dimen_dp_2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:background="@color/color_17c7eb" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_17c7eb" />

</LinearLayout>