<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/part_foot_root_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_100"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#f4f4f4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_postcontent_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_sp_13"
                android:textColor="@color/color_787878"
                android:text="拍摄或者从图库选择" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_postcontent_tx"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/part_foot_photograph_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_dp_5"
                    android:src="@mipmap/bt_takephoto_tabbar" />

                <ImageView
                    android:id="@+id/part_foot_album_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_dp_5"
                    android:src="@mipmap/bt_album_tabbar" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_dp_2"
            android:layout_height="match_parent"
            android:background="@color/color_white" />

        <com.base.baselibs.widget.MyCleanEditText
            android:id="@+id/part_foot_content_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#f4f4f4"
            android:gravity="top"
            android:hint="输入内容..."
            android:maxLength="254"
            android:padding="@dimen/dimen_dp_10"
            android:textSize="@dimen/dimen_sp_14" />
    </LinearLayout>


</LinearLayout>