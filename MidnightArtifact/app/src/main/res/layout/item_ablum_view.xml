<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_personal_ablum_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        fresco:actualImageScaleType="fitXY"
        fresco:failureImage="@mipmap/icon_goodsdetail_business"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@mipmap/icon_goodsdetail_business" />

    <ImageView
        android:id="@+id/item_personal_ablum_select_ic"
        android:layout_width="@dimen/dimen_dp_20"
        android:layout_height="@dimen/dimen_dp_20"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_dp_5"
        android:layout_marginRight="@dimen/dimen_dp_5"
        android:src="@mipmap/select_notchoose_icon"/>

</RelativeLayout>