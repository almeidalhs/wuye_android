<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_messagecenter_root_ll"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_messagecenter_name_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name:"
            android:textColor="#E170C2"
            android:textSize="@dimen/dimen_sp_13" />

        <TextView
            android:id="@+id/item_messagecenter_type_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请求加你为好友"
            android:textColor="#a2a2a2"
            android:textSize="@dimen/dimen_sp_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_5"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_messagecenter_time_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:text="2016-11-11"
            android:textColor="#a2a2a2"
            android:textSize="@dimen/dimen_sp_10" />

        <Button
            android:id="@+id/item_messagecenter_cancel_bt"
            android:layout_width="@dimen/dimen_dp_40"
            android:layout_height="@dimen/dimen_dp_25"
            android:layout_centerInParent="true"
            android:background="@drawable/bt_item_friend_cancel_selector"
            android:text="拒绝"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_11"/>

        <Button
            android:id="@+id/item_messagecenter_ok_bt"
            android:layout_width="@dimen/dimen_dp_40"
            android:layout_height="@dimen/dimen_dp_25"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_centerInParent="true"
            android:background="@drawable/bt_item_friend_ok_selector"
            android:text="接受"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_11"/>


    </LinearLayout>

</LinearLayout>