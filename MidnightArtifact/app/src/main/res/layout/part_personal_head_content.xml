<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/personal_mysecret_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/plaza_icon_more_create" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:gravity="center"
                android:text="发布"
                android:textColor="@color/personal_item_tx"
                android:textSize="@dimen/dimen_sp_16" />
        </LinearLayout>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_dp_5"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:src="@color/color_line" />

        <RelativeLayout
            android:id="@+id/personal_secretreply_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/personal_secretreply_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/plaza_icon_more_reply" />

            <TextView
                android:id="@+id/personal_secretreply_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:layout_toRightOf="@+id/personal_secretreply_iv"
                android:gravity="center"
                android:text="回复"
                android:textColor="@color/personal_item_tx"
                android:textSize="@dimen/dimen_sp_16" />

            <ImageView
                android:id="@+id/personal_secretreply_wran_iv"
                android:layout_width="@dimen/dimen_dp_7"
                android:layout_height="@dimen/dimen_dp_7"
                android:layout_toRightOf="@+id/personal_secretreply_tv"
                android:src="@mipmap/dote_pressed"
                android:visibility="visible" />
        </RelativeLayout>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_dp_5"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:src="@color/color_line" />

        <LinearLayout
            android:id="@+id/personal_mycollection_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/plaza_icon_more_store" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/personal_item_tx"
                android:textSize="@dimen/dimen_sp_16" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/personal_visitor_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="@dimen/dimen_dp_30"
            android:layout_height="@dimen/dimen_dp_30"
            android:src="@mipmap/personal_vititis_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:text="访    客"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <TextView
            android:id="@+id/personal_visitor_num_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_30"
            android:text=""
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/personal_visitor_one_iv"
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                android:visibility="gone"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/personal_visitor_two_iv"
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:visibility="gone"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/personal_visitor_three_iv"
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:visibility="gone"
                fresco:failureImage="@mipmap/ic_launcher"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:background="@color/color_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_friends_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="@dimen/dimen_dp_30"
            android:layout_height="@dimen/dimen_dp_30"
            android:src="@mipmap/personal_guard_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:text="守护者"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/personal_guardian_one_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/personal_guardian_top_one_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/other_guard_one" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/personal_guardian_one_iv"
                    android:layout_width="@dimen/dimen_dp_30"
                    android:layout_height="@dimen/dimen_dp_30"
                    android:layout_centerVertical="true"
                    fresco:failureImage="@mipmap/ic_launcher"
                    fresco:placeholderImage="@mipmap/ic_launcher"
                    fresco:roundAsCircle="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/personal_guardian_two_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/personal_guardian_top_two_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/other_guard_one" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/personal_guardian_two_iv"
                    android:layout_width="@dimen/dimen_dp_30"
                    android:layout_height="@dimen/dimen_dp_30"
                    android:layout_centerVertical="true"
                    fresco:failureImage="@mipmap/ic_launcher"
                    fresco:placeholderImage="@mipmap/ic_launcher"
                    fresco:roundAsCircle="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/personal_guardian_three_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/personal_guardian_top_three_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/other_guard_one" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/personal_guardian_three_iv"
                    android:layout_width="@dimen/dimen_dp_30"
                    android:layout_height="@dimen/dimen_dp_30"
                    android:layout_centerVertical="true"
                    fresco:failureImage="@mipmap/ic_launcher"
                    fresco:placeholderImage="@mipmap/ic_launcher"
                    fresco:roundAsCircle="true" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/personal_recharge_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="@dimen/dimen_dp_30"
            android:layout_height="@dimen/dimen_dp_30"
            android:src="@mipmap/persoanl_recharge_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_weight="1"
            android:text="钱    包"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <TextView
            android:id="@+id/personal_mycoin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:drawableLeft="@mipmap/coin_ic"
            android:text=""
            android:textColor="#fe939e"
            android:textSize="@dimen/dimen_sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_dp_15"
            android:src="@mipmap/right_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:background="@color/color_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_myorder_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="@dimen/dimen_dp_30"
            android:layout_height="@dimen/dimen_dp_30"
            android:src="@mipmap/personal_order_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_weight="1"
            android:text="@string/personal_myorder_str"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_dp_15"
            android:src="@mipmap/right_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:background="@color/color_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_vip_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="@dimen/dimen_dp_30"
            android:layout_height="@dimen/dimen_dp_30"
            android:src="@mipmap/persoanl_vip_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_weight="1"
            android:text="@string/personal_myvip_str"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <TextView
            android:id="@+id/personal_myvipstatus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:text=""
            android:textColor="#fe939e"
            android:textSize="@dimen/dimen_sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_dp_15"
            android:src="@mipmap/right_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:background="@color/color_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_mygift_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="@dimen/dimen_dp_30"
            android:layout_height="@dimen/dimen_dp_30"
            android:src="@mipmap/persoanl_gift_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:text="礼    物"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/personal_gift_one_iv"
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                fresco:actualImageScaleType="centerInside"
                android:visibility="gone" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/personal_gift_two_iv"
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                fresco:actualImageScaleType="centerInside"
                android:visibility="gone" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/personal_gift_three_iv"
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                fresco:actualImageScaleType="centerInside"
                android:visibility="gone" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/personal_gift_four_iv"
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                fresco:actualImageScaleType="centerInside"
                android:visibility="gone" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/personal_gift_five_iv"
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                fresco:actualImageScaleType="centerInside"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/personal_task_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <RelativeLayout
            android:layout_width="@dimen/dimen_dp_35"
            android:layout_height="@dimen/dimen_dp_30">

            <ImageView
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                android:src="@mipmap/personal_task_ic" />

            <ImageView
                android:id="@+id/personal_task_iv"
                android:layout_width="@dimen/dimen_dp_5"
                android:layout_height="@dimen/dimen_dp_5"
                android:layout_alignParentRight="true"
                android:src="@mipmap/dote_pressed"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_weight="1"
            android:text="@string/personal_task_str"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:text="去完成任务"
            android:textColor="#fe939e"
            android:textSize="@dimen/dimen_sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_dp_15"
            android:src="@mipmap/right_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:background="@color/color_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_maillist_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dimen_dp_30"
            android:layout_height="@dimen/dimen_dp_30"
            android:src="@mipmap/personal_addlist_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_weight="1"
            android:text="@string/personal_maillist_str"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_dp_15"
            android:src="@mipmap/right_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:background="@color/color_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_service_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="@dimen/dimen_dp_30"
            android:layout_height="@dimen/dimen_dp_30"
            android:src="@mipmap/personal_service_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_weight="1"
            android:text="@string/personal_service_str"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_marginRight="@dimen/dimen_dp_15"
            android:text="@string/personal_service_phone_str"
            android:textColor="@color/personal_item_tx"
            android:textSize="@dimen/dimen_sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_dp_15"
            android:src="@mipmap/right_arrow" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

</LinearLayout>