<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/personal_album_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/personal_album_ll"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:gravity="center_vertical|right"
        android:visibility="gone"
        android:layout_height="@dimen/dimen_dp_40">

        <TextView
            android:id="@+id/personal_album_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:background="@drawable/level_red_new_bg"
            android:paddingLeft="@dimen/dimen_dp_5"
            android:paddingRight="@dimen/dimen_dp_5"
            android:paddingTop="@dimen/dimen_dp_5"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:textColor="#fb5c98"
            android:textSize="@dimen/dimen_sp_14"
            android:text="删除"/>

    </LinearLayout>

</RelativeLayout>