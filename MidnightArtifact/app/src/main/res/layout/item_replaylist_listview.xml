<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_relay_root_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/color_line" />

    <RelativeLayout
        android:id="@+id/item_relay_top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_dp_15">

        <RelativeLayout
            android:id="@+id/item_relay_head_rl"
            android:layout_width="@dimen/dimen_dp_40"
            android:layout_height="@dimen/dimen_dp_40"
            android:clickable="true">

            <com.base.baselibs.widget.CustomImageView xmlns:img="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_relay_head_img"
                android:layout_width="@dimen/dimen_dp_40"
                android:layout_height="@dimen/dimen_dp_40"
                android:src="@mipmap/ic_launcher"
                img:circle="false"
                img:radius="@dimen/dimen_dp_6" />

            <ImageView
                android:id="@+id/item_relay_gender_img"
                android:layout_width="@dimen/dimen_dp_16"
                android:layout_height="@dimen/dimen_dp_16"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/personal_weman_ic" />

            <ImageView
                android:id="@+id/item_relay_verify_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_13"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@mipmap/personal_identification" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_relay_name_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_toRightOf="@+id/item_relay_head_rl"
            android:text="匿名用户"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_sp_14" />

        <TextView
            android:id="@+id/item_relay_level_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_relay_name_tx"
            android:layout_marginLeft="@dimen/dimen_dp_5"
            android:layout_toRightOf="@+id/item_relay_name_tx"
            android:background="@drawable/level_blue_bg"
            android:paddingLeft="@dimen/dimen_dp_3"
            android:paddingRight="@dimen/dimen_dp_3"
            android:text="Lv 1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_12" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_3"
            android:layout_marginTop="@dimen/dimen_dp_3"
            android:layout_toRightOf="@+id/item_relay_level_tx">

            <TextView
                android:id="@+id/item_relay_vip_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/level_red_bg"
                android:paddingLeft="@dimen/dimen_dp_5"
                android:paddingRight="@dimen/dimen_dp_5"
                android:text="VIP.0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_12"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_relay_svip_iv"
                android:layout_width="@dimen/dimen_dp_50"
                android:layout_height="@dimen/dimen_dp_16"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/other_svip_ic"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_relay_type_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_relay_name_tx"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:layout_toRightOf="@+id/item_relay_head_rl"
            android:text="[帖子]"
            android:textColor="#A9A9A9"
            android:textSize="@dimen/dimen_sp_12" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15">

        <TextView
            android:id="@+id/item_relay_content_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="title"
            android:textColor="#A9A9A9"
            android:textSize="@dimen/dimen_sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_dp_5"
        android:layout_marginLeft="@dimen/dimen_dp_10"
        android:layout_marginRight="@dimen/dimen_dp_10"
        android:layout_marginTop="@dimen/dimen_dp_5"
        android:background="@drawable/item_comment_bg"
        android:padding="@dimen/dimen_dp_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_relay_name_two_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容简介:"
            android:textColor="@color/color_feb44a"
            android:textSize="@dimen/dimen_sp_14" />

        <TextView
            android:id="@+id/item_relay_content_two_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="10"
            android:text="内容简介"
            android:textColor="#A9A9A9"
            android:textSize="@dimen/dimen_sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_relay_time_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dimen_dp_10"
        android:textColor="#A9A9A9"
        android:textSize="@dimen/dimen_sp_12" />

</LinearLayout>