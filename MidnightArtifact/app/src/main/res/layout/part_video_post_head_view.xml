<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_45"
        android:layout_marginBottom="@dimen/dimen_dp_10"
        android:background="#f4f4f4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:text="标题"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_16" />

        <com.base.baselibs.widget.MyCleanEditText
            android:id="@+id/part_video_title_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_40"
            android:background="@null"
            android:hint="输入标题（最多30个字符）"
            android:inputType="text"
            android:maxLength="30"
            android:padding="@dimen/dimen_dp_5"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_14" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/part_video_rl"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/color_black">

        <ImageView
            android:id="@+id/part_video_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/part_video_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_45"
            android:layout_alignParentBottom="true"
            android:background="@color/color_44000000"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:id="@+id/part_video_changevideo_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="更换视频"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_13" />

            <ImageView
                android:layout_width="1px"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:layout_marginBottom="@dimen/dimen_dp_5"
                android:layout_height="match_parent"
                android:src="@color/color_white" />

            <Button
                android:id="@+id/part_video_changeimg_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="更换封面"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/part_video_add_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+添加视频"
            android:gravity="center"
            android:textSize="@dimen/dimen_sp_15"
            android:textColor="@color/color_787878"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginBottom="@dimen/dimen_dp_10"
            android:background="#f4f4f4"/>
    </RelativeLayout>

</LinearLayout>