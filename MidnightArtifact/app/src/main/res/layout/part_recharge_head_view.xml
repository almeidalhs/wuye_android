<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_80"
        android:background="#bc8c82"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_totalcoin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/cion_red"
                android:text="金币 "
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_14" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_dp_10"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:background="@color/color_white" />

        <LinearLayout
            android:id="@+id/recharge_mydiamonds_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_canoutcoin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钻石 "
                android:drawableRight="@mipmap/diamonds_red"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_sp_14" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_1"
        android:src="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_dp_20"
        android:paddingBottom="@dimen/dimen_dp_20">

        <TextView
            android:id="@+id/recharge_diamondstocion_tv"
            android:layout_width="@dimen/dimen_dp_100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_dp_30"
            android:background="@drawable/mygoldshop_one_selector"
            android:padding="7dp"
            android:text="钻石兑金币"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_14" />

        <TextView
            android:id="@+id/recharge_withdrawals_tv"
            android:layout_width="@dimen/dimen_dp_100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/mygoldshop_mudle_selector"
            android:padding="7dp"
            android:layout_marginLeft="@dimen/dimen_dp_30"
            android:text="提      现"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_14" />

        <TextView
            android:id="@+id/recharge_diamondsshop_tv"
            android:layout_width="@dimen/dimen_dp_90"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_dp_30"
            android:background="@drawable/mygoldshop_two_selector"
            android:padding="7dp"
            android:visibility="gone"
            android:text="钻石商城"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_15" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_3"
            android:layout_centerVertical="true"
            android:background="@color/color_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_dp_30"
            android:background="@color/color_white"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:paddingLeft="@dimen/dimen_dp_10"
            android:paddingRight="@dimen/dimen_dp_10"
            android:paddingTop="@dimen/dimen_dp_5"
            android:text="充值钜惠，最高30％，每日首充再赠20%"
            android:textColor="@color/color_black"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>