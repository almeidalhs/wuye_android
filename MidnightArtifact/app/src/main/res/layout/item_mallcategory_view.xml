<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:layout_marginTop="@dimen/dimen_dp_5">

        <ImageView
            android:id="@+id/item_twocategory_title_iv"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/category_one" />

        <TextView
            android:id="@+id/item_twocategory_title_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/dimen_sp_13"
            android:text="------ 标题 ------"
            android:textColor="#412F46" />
    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="@dimen/dimen_dp_5"
        android:paddingRight="@dimen/dimen_dp_5"
        android:paddingTop="@dimen/dimen_dp_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_twocategory_one_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            fresco:failureImage="@mipmap/icon_goodsdetail_business"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_goodsdetail_business" />

        <View
            android:layout_width="@dimen/dimen_dp_3"
            android:layout_height="wrap_content"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_twocategory_two_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            fresco:failureImage="@mipmap/icon_goodsdetail_business"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_goodsdetail_business"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_dp_5"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_twocategory_three_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            fresco:failureImage="@mipmap/icon_goodsdetail_business"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_goodsdetail_business"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/dimen_dp_3"
            android:layout_height="wrap_content"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_twocategory_four_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            fresco:failureImage="@mipmap/icon_goodsdetail_business"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_goodsdetail_business"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/dimen_dp_3"
            android:layout_height="wrap_content"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_twocategory_five_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            fresco:failureImage="@mipmap/icon_goodsdetail_business"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/icon_goodsdetail_business"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>