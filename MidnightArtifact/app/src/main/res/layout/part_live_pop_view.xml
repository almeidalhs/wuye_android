<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/part_root_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/part_livepop_root_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_dp_50"
        android:background="@drawable/white_hollow_stroke_radius5_bg">

        <ImageView
            android:id="@+id/part_livepop_close_iv"
            android:layout_width="@dimen/dimen_dp_25"
            android:layout_height="@dimen/dimen_dp_25"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:padding="5dp"
            android:src="@mipmap/post_create_delete" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_dp_5"
                android:text="主题描述："
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_13" />

            <com.base.baselibs.widget.MyCleanEditText
                android:id="@+id/part_livepop_title_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_30"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入主题描述"
                android:singleLine="true"
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_13" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_1"
                android:background="@color/color_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_dp_5"
                android:layout_marginTop="@dimen/dimen_dp_30"
                android:text="封面图片："
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_13" />

            <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/part_livepop_bg_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_dp_10"
                fresco:failureImage="@mipmap/icon_goodsdetail_business"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/icon_goodsdetail_business" />

            <TextView
                android:id="@+id/part_livepop_golive_tx"
                android:layout_marginRight="@dimen/dimen_dp_10"
                android:layout_width="@dimen/dimen_dp_170"
                android:layout_height="@dimen/dimen_dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_dp_30"
                android:background="@drawable/pop_live_selector"
                android:gravity="center"
                android:text="开始直播"
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_14" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>