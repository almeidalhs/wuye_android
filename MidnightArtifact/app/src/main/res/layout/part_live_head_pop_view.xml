<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/part_root_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/part_livehead_root_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/white_hollow_stroke_radius5_bg">

        <ImageView
            android:id="@+id/part_livehead_close_iv"
            android:layout_width="@dimen/dimen_dp_25"
            android:layout_height="@dimen/dimen_dp_25"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:padding="5dp"
            android:src="@mipmap/post_create_delete" />

        <RelativeLayout
            android:id="@+id/pop_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/part_livehead_rl"
                android:layout_width="@dimen/dimen_dp_55"
                android:layout_height="@dimen/dimen_dp_55"
                android:layout_centerHorizontal="true">

                <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/part_livehead_head_iv"
                    android:layout_width="@dimen/dimen_dp_55"
                    android:layout_height="@dimen/dimen_dp_55"
                    android:background="@drawable/ic_app"
                    fresco:failureImage="@mipmap/ic_launcher"
                    fresco:failureImageScaleType="centerInside"
                    fresco:placeholderImage="@mipmap/ic_launcher"
                    fresco:roundedCornerRadius="@dimen/dimen_dp_5"
                    fresco:roundingBorderColor="@android:color/white"
                    fresco:roundingBorderWidth="0dp" />

                <ImageView
                    android:id="@+id/part_livehead_gender_iv"
                    android:layout_width="@dimen/dimen_dp_15"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="0dp"
                    android:src="@mipmap/personal_man_ic" />

                <ImageView
                    android:id="@+id/part_livehead_verify_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dimen_dp_2"
                    android:scaleType="fitXY"
                    android:src="@mipmap/personal_identification"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/part_livehead_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/part_livehead_rl"
                android:layout_marginTop="@dimen/dimen_dp_10"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:text="--"
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_14" />

            <LinearLayout
                android:layout_below="@+id/part_livehead_name_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/livehead_level_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/level_blue_bg"
                    android:paddingLeft="@dimen/dimen_dp_3"
                    android:paddingRight="@dimen/dimen_dp_3"
                    android:text="Lv.0"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_sp_12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dimen_dp_3">

                    <TextView
                        android:id="@+id/part_livehead_vip_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/level_red_bg"
                        android:paddingLeft="@dimen/dimen_dp_5"
                        android:paddingRight="@dimen/dimen_dp_5"
                        android:text="VIP.0"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/dimen_sp_10"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/part_livehead_svip_iv"
                        android:layout_width="@dimen/dimen_dp_50"
                        android:layout_height="@dimen/dimen_dp_13"
                        android:src="@mipmap/other_svip_ic"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/pop_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/part_livehead_add_tx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_35"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/dimen_dp_10"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:layout_weight="1"
                android:background="@drawable/pop_live_selector"
                android:gravity="center"
                android:text="＋加好友"
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_14" />

            <TextView
                android:id="@+id/part_livepop_gag_tx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_35"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/dimen_dp_10"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:layout_weight="1"
                android:background="@drawable/pop_live_selector"
                android:gravity="center"
                android:text="禁言"
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/part_livepop_more_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dimen_dp_10"
            android:textSize="@dimen/dimen_sp_12"
            android:textColor="#3bb7f4"
            android:text="更多"/>


    </RelativeLayout>

</RelativeLayout>